{
  "name": "starter",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "prepare": "husky"
  },
  "devDependencies": {
    "@commitlint/cli": "19.3.0",
    "@commitlint/config-conventional": "19.2.2",
    "husky": "9.1.4",
    "lint-staged": "15.2.8",
    "turbo": "latest",
    "@starter/eslint-config": "*",
    "@starter/prettier": "*",
    "@starter/tsconfig": "*"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "npm@10.5.0",
  "workspaces": [
    "apps/*",
    "packages/*",
    "config/*"
  ],
  "eslintConfig": {
    "extends": [
      "@starter/eslint-config/library"
    ]
  },
  "prettier": "@starter/prettier",
  "lint-staged": {
    "*.{js,ts,tsx}": [
      "eslint --fix --max-warnings=0",
      "prettier --write"
    ]
  }
}
